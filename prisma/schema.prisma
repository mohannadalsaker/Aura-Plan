generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String         @id @default(uuid(7)) @db.Uuid
  username         String
  password         String
  role_id          String         @db.Uuid
  email            String         @unique
  last_login       DateTime?
  comments         Comment[]
  member_projects  Project[]      @relation("ProjectMembers")
  managed_projects Project[]      @relation("ProjectManager")
  created_tasks    Task[]         @relation("TaskCreator")
  tasks            TasksOnUsers[]
  created_at       DateTime       @default(now())
  updated_at       DateTime       @updatedAt
  role             Role           @relation(fields: [role_id], references: [id])

  @@index([email])
  @@index([role_id])
}

model Task {
  id          String         @id @default(uuid(7)) @db.Uuid
  title       String
  description String?
  start_date  DateTime
  end_date    DateTime?
  status      TaskStatus    @default(TODO)
  rating      Float?
  creator_id  String         @db.Uuid
  creator     User           @relation("TaskCreator", fields: [creator_id], references: [id], onDelete: Cascade)
  users       TasksOnUsers[]
  comments    Comment[]
  project_id  String         @db.Uuid
  created_at  DateTime       @default(now())
  updated_at  DateTime       @updatedAt
  project     Project        @relation(fields: [project_id], references: [id], onDelete: Cascade)

  @@index([creator_id])
  @@index([project_id])
  @@index([status])
  @@index([start_date])
  taskStatusHistories TaskStatusHistory[]
}

model TasksOnUsers {
  user        User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id     String    @db.Uuid
  task        Task      @relation(fields: [task_id], references: [id], onDelete: Cascade)
  task_id     String    @db.Uuid
  assigned_at DateTime?

  @@id([task_id, user_id])
  @@index([user_id])
  @@index([assigned_at])
}

model Project {
  id          String        @id @default(uuid(7)) @db.Uuid
  title       String
  description String?
  start_date  DateTime
  end_date    DateTime?
  status      ProjectStatus
  manager_id  String        @db.Uuid
  members     User[]        @relation("ProjectMembers")
  manager     User          @relation("ProjectManager", fields: [manager_id], references: [id], onDelete: Cascade)
  tasks       Task[]
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt

  @@index([manager_id])
  @@index([status])
  @@index([start_date])
  projectStatusHistories ProjectStatusHistory[]
}

model Comment {
  id         String   @id @default(uuid(7)) @db.Uuid
  text       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  task       Task     @relation(fields: [task_id], references: [id], onDelete: Cascade)
  user_id    String   @db.Uuid
  task_id    String   @db.Uuid
}

model Role {
  id          String        @id @default(uuid(7)) @db.Uuid
  name        String        @unique
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt
  users       User[]
  permissions Permissions[] @default([])
}

model TaskStatusHistory {
  id         String      @id @default(uuid(7)) @db.Uuid
  task_id    String      @db.Uuid
  old_status TaskStatus
  new_status TaskStatus
  changed_at DateTime    @default(now())

  task Task @relation(fields: [task_id], references: [id], onDelete: Cascade)

  @@index([task_id])
  @@index([changed_at])
  @@index([new_status])
}

model ProjectStatusHistory {
  id         String         @id @default(uuid(7)) @db.Uuid
  project_id String         @db.Uuid
  old_status ProjectStatus
  new_status ProjectStatus
  changed_at DateTime       @default(now())

  project Project @relation(fields: [project_id], references: [id], onDelete: Cascade)
}


enum ProjectStatus {
  ACTIVE
  COMPLETED
  PLANNING
  ON_HOLD
  REVIEW
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  CANCELLED
  REVIEW
}

enum Permissions {
  // PROJECT
  CREATE_PROJECT
  READ_ALL_PROJECTS
  READ_PROJECT
  UPDATE_PROJECT
  DELETE_PROJECT
  CHANGE_PROJECT_STATUS
  // TASK
  CREATE_TASK
  READ_ALL_TASKS
  READ_TASK
  UPDATE_TASK
  DELETE_TASK
  RATE_TASK
  CHANGE_TASK_STATUS
  // USER
  CREATE_USER
  READ_ALL_USERS
  READ_USER
  UPDATE_USER
  DELETE_USER
  // ROLE
  CREATE_ROLE
  READ_ALL_ROLES
  READ_ROLE
  UPDATE_ROLE
  DELETE_ROLE
  // COMMENT
  CREATE_COMMENT
  READ_ALL_COMMENTS
  READ_COMMENT
  UPDATE_COMMENT
  DELETE_COMMENT
}
