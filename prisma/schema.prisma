generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String         @id @default(uuid(7)) @db.Uuid
  username         String
  password         String
  role_id          String         @db.Uuid
  email            String         @unique
  last_login       DateTime
  comments         Comment[]
  member_projects  Project[]      @relation("ProjectMembers")
  managed_projects Project[]      @relation("ProjectManager")
  tasks            TasksOnUsers[]
  created_at       DateTime       @default(now())
  updated_at       DateTime       @updatedAt
  role             Role           @relation(fields: [role_id], references: [id])

  @@index([email])
  @@index([role_id])
}

model Task {
  id          String         @id @default(uuid(7)) @db.Uuid
  title       String
  description String?
  start_date  DateTime
  end_date    DateTime?
  status      TaskStatus
  rating      Int?
  users       TasksOnUsers[]
  comments    Comment[]
  project_id  String         @db.Uuid
  created_at  DateTime       @default(now())
  updated_at  DateTime       @updatedAt
  project     Project        @relation(fields: [project_id], references: [id], onDelete: Cascade)

  @@index([project_id])
  @@index([status])
  @@index([start_date])
}

model TasksOnUsers {
  user        User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id     String    @db.Uuid
  task        Task      @relation(fields: [task_id], references: [id], onDelete: Cascade)
  task_id     String    @db.Uuid
  assigned_at DateTime?

  @@id([task_id, user_id])
  @@index([user_id])
  @@index([assigned_at])
}

model Project {
  id          String        @id @default(uuid(7)) @db.Uuid
  title       String
  description String?
  start_date  DateTime
  end_date    DateTime?
  status      ProjectStatus
  manager_id  String        @db.Uuid
  members     User[]        @relation("ProjectMembers")
  manager     User          @relation("ProjectManager", fields: [manager_id], references: [id], onDelete: Cascade)
  tasks       Task[]
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt

  @@index([manager_id])
  @@index([status])
  @@index([start_date])
}

model Comment {
  id         String   @id @default(uuid(7)) @db.Uuid
  text       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  task       Task     @relation(fields: [task_id], references: [id], onDelete: Cascade)
  user_id    String   @db.Uuid
  task_id    String   @db.Uuid
}

model Role {
  id          String       @id @default(uuid(7)) @db.Uuid
  name        String       @unique
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
  users       User[]
  permissions Permission[]
}

model Permission {
  id         String   @id @default(uuid(7)) @db.Uuid
  title      String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  roles      Role[]
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
  PLANNING
  ON_HOLD
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  CANCELLED
  REVIEW
}
